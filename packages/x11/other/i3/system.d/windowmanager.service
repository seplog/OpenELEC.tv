[Unit]
Description=i3 Window Manager
Requires=xorg.service
After=xorg.service
Before=kodi.service

[Service]
Environment=DISPLAY=:0
Environment=HOME=/storage
ExecStart=/usr/bin/i3
KillMode=process
Restart=always
RestartSec=1
StartLimitInterval=0
TimeoutStopSec=1s

[Install]
WantedBy=graphical.target
